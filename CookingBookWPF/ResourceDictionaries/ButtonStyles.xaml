    <!--Кнопка для добавления и тд шагов и ингредиентов-->
    <Style TargetType="Button"
           x:Key="stepButton">
        <Setter Property="Background"
                Value="White"/>
        <Setter Property="FontFamily"
                Value="Verdana"/>
        <Setter Property="FontSize"
                Value="25"/>    
        <Setter Property="Width"
                Value="50"/>
        <Setter Property="Height"
                Value="50"/>
        <Setter Property="Foreground"
                Value="{DynamicResource red}"/>
        <Setter Property="RenderTransformOrigin"
                Value="0.5, 0.5"/>
        <Setter Property="RenderTransform">
            <Setter.Value>
                <ScaleTransform ScaleX="1" ScaleY="1"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="25" BorderBrush="{DynamicResource defaultTextHelpColor}" BorderThickness="1">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background"
                                        Value="{DynamicResource defaultColor}"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="10" Color="{DynamicResource defaultShadowColor}"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Cursor"
                                        Value="Hand"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver"
                                             Value="True">
                                        <Setter Property="Background"
                                                Value="LightGray"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <Border.Resources>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground"
                                        Value="red"/>
                            </Style>
                        </Border.Resources>
                        <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <EventTrigger RoutedEvent="PreviewMouseLeftButtonDown">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX"
                                 To="0.97"
                                 Duration="0:0:0.05"/>
                        <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY"
                                 To="0.97"
                                 Duration="0:0:0.05"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
            <EventTrigger RoutedEvent="PreviewMouseLeftButtonUp">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX"
                                 To="1" 
                                 Duration="0:0:0.05"/>
                        <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY"
                                 To="1" 
                                 Duration="0:0:0.05"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Style.Triggers>
    </Style>

    <!--не помню( buttonText-->
    <Style TargetType="TextBlock"
               x:Key="buttonText">
        <Setter Property="Foreground"
                Value="{DynamicResource defaultTextHelpColor}"/>
    </Style>
        
</ResourceDictionary>